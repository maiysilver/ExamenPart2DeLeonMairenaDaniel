<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/numeros"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:fontFamily="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="555dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/butonC"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="reset"
                android:text="C" />

            <Button
                android:id="@+id/buton7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="num7"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/buton4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="num4"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/buton1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="num1"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/buton0"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="num0"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/butonDiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="dividir"
                android:text="/" />

            <Button
                android:id="@+id/buton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="num8"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/buton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="num5"
                android:text="5" />

            <Button
                android:id="@+id/buton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="num2"
                android:layout_weight="1"
                android:text="2" />

            <TextView
                android:id="@+id/textViewVacio"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/butonMul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="multiplicar"
                android:text="X" />

            <Button
                android:id="@+id/buton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="num9"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/buton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="num6"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/buton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="num3"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/butonPunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="punto"
                android:layout_weight="1"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/butonMen"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:onClick="restar"
                android:layout_weight="1"
                android:text="-" />

            <Button
                android:id="@+id/butonMas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sumar"
                android:layout_weight="2"
                android:text="+" />

            <Button
                android:id="@+id/butonIgual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="igual"
                android:layout_weight="2"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>